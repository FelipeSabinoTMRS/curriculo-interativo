{
  "name": "curriculo-interativo",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix build",
    "dev": "remix dev --manual -c \"npm run start:functions\"",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "start": "wrangler pages dev ./public",
    "start:functions": "wrangler pages dev ./public --compatibility-date=2024-01-01",
    "typecheck": "tsc",
    "db:create": "wrangler d1 create curriculo-db",
    "db:migrate": "wrangler d1 execute curriculo-db --file=database/schema.sql",
    "db:studio": "wrangler d1 info curriculo-db",
    "db:backup": "wrangler d1 backup curriculo-db",
    "r2:create": "wrangler r2 bucket create curriculo-images",
    "r2:list": "wrangler r2 bucket list",
    "setup:cloudflare": "chmod +x scripts/setup-cloudflare.sh && ./scripts/setup-cloudflare.sh",
    "deploy": "wrangler deploy",
    "deploy:preview": "wrangler deploy --env preview",
    "logs": "wrangler tail",
    "cf:login": "wrangler login",
    "cf:whoami": "wrangler whoami"
  },
  "dependencies": {
    "@remix-run/cloudflare": "^2.15.1",
    "@remix-run/cloudflare-pages": "^2.15.1",
    "@remix-run/react": "^2.15.1",
    "isbot": "^4.1.0",
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "hono": "^3.12.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250726.0",
    "@remix-run/dev": "*",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.38.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.1.6",
    "vite": "^6.0.0",
    "vite-tsconfig-paths": "^4.2.1",
    "wrangler": "3.57.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
